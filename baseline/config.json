{
    "name": "UNet",
    "n_gpu": 1,
    "seed": 1997,

    "epochs": 100,
    "batch_size": 16,
    "val_interval": 1,

    "saved_dir": "saved/",

    "model": {
        "type": "UNet",
        "args": {}
    },
    
    "train_dataset": {
        "type": "CustomDataset",
        "args":{
            "json_path": "/opt/ml/segmentation/input/data/train.json",
            "mode": "train"
        }
    },
    "valid_dataset": {
        "type": "CustomDataset",
        "args":{
            "json_path": "/opt/ml/segmentation/input/data/val.json",
            "mode": "val"
        }
    },
    "test_dataset": {
        "type": "CustomDataset",
        "args":{
            "json_path": "/opt/ml/segmentation/input/data/test.json",
            "mode": "test"
        }
    },
    "train_transform":{
        "type": "BaseAugmentation",
        "args":{
            "train": true
        }
    }, 
    "valid_transform":{
        "type": "BaseAugmentation",
        "args":{
            "train": false
        }
    },
    "test_transform":{
        "type": "BaseAugmentation",
        "args":{
            "train": false
        }
    }, 
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 1e-6,
            "amsgrad": true
        }
    },
    "criterion": {
        "type": "DiceLoss",
        "args": {}
    }, 
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 2,
            "gamma": 0.1
        }
    }
}
